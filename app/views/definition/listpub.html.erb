<meta http-equiv="content-type" content="text/html; charset=utf-8" />
<h1><%= t(:defs_to_publish) %></h1>

<table border=1 cellpadding=5>
<tr><th>Def</th><th>Since</th><th>Actions</th></tr>
<% for d in @pubdefs
  since = d.events.where(:new_status => @status)[0].created_at %>
  <tr><td><%= link_to h(d.defhead), :controller => :definition, :action => :view, :id => d %></td><td><%=h since %></td><td><%= link_to 'Edit', :controller => 'type', :action => 'edit', :id => d %> <%= link_to 'Publish', :action => 'publish', :id => d %> <%= link_to 'Back to proofreading', :action => 'reproof', :id => d %></td></tr>
<% end %>
</table>
<%= will_paginate @pubdefs %>
<p/>
