<h1><%= t(:changes_title) %></h1>

<table border="1" cellpadding="3">
<tr><th><%= t(:changes_defhead) %></th><th><%= t(:changes_who) %></th><th><%= t(:changes_from) %></th><th><%= t(:changes_to) %></th><th><%= t(:changes_ago) %></th></tr>

<% for c in @changes %> 
 <% unless c.thedef.nil? %>
  <tr><td><%= link_to c.thedef.defhead, :controller => :definition, :action => :view, :id => c.thedef %></td><td><%= link_to c.user.fullname, :controller => :user, :action => :show, :id => c.user %></td><td><%=h label_for_status(c.old_status) %></td><td><%=h label_for_status(c.new_status) %></td><td><%=h time_ago_in_words(c.created_at)  %></td></tr>
<% end %>
<% end %>
</table>

<%= will_paginate @changes %>
<p/>
