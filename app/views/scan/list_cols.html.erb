<meta http-equiv="content-type" content="text/html; charset=utf-8" />
<h1>Scanned Column-Images</h1>

<table border=1 cellpadding=5>
<tr><th>Vol</th><th>Page #</th><th>Col #</th><th>Status</th><th>Assigned To</th><th>Partitioned By</th><th>Actions</th></tr>

<% for sc in @colimgs %>
  <tr><td><%=h sc.volume %></td><td><%=h sc.pagenum %></td><td><%=h sc.colnum %></td><td><%=h sc.status %></td><td><a href="<%= "/users/show/#{sc.assignedto}" %>"<%= sc.assignedto %></a></td><td><%=h "TBD" %></td><td><%= link_to 'Partition', :action => 'part_col', :id => sc %></td></tr>
<% end %>
</table>
<%= will_paginate @colimgs %>

